<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#A6D378" android:startColor="#729940" android:type="linear"/>
            <stroke android:width="1dp" android:color="#729940" />
            <corners android:radius="10dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>

    <item android:state_focused="true">

        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#A6D378" android:startColor="#729940" />
            <stroke android:width="1dp" android:color="#729940" />
            <corners android:radius="1dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient android:angle="90" android:endColor="#A6D378" android:startColor="#729940" />
            <stroke android:width="1dp" android:color="#A6D378" />
            <corners android:radius="15dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>
</selector>